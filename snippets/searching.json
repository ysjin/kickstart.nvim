{
  "Binary Search ": {
    "prefix": "bsearch",
    "body": [
      "int binarySearch(int a[], int l, int r, int x)",
      "{",
      "    if (r >= l)",
      "    {",
      "        int mid = l + (r - l) / 2;",
      "",
      "        if (a[mid] == x)",
      "        {",
      "            return mid;",
      "        }",
      "",
      "        if (a[mid] > x)",
      "        {",
      "            return binarySearch(a, l, mid - 1, x);",
      "        }",
      "        return binarySearch(a, mid + 1, r, x);",
      "    }",
      "    return -1;",
      "}",
      "int main()",
      "{",
      "    int n;",
      "    cin >> n;",
      "    int a[n];",
      "    for (int i = 0; i < n; i++)",
      "    {",
      "        cin >> a[i];",
      "    }",
      "    int x;",
      "    cin >> x;",
      "    cout << binarySearch(a, 0, n - 1, x);",
      "",
      "    return 0;",
      "}"
    ],
    "description": "Binary Search"
  }
}
